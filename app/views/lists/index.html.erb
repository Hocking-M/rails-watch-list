<div class="container pt-6">
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-4 mb-4">
        <div class="card" style="width: 14rem;">
          <img class="card-img-top" src="..." alt="Card image cap">
          <div class="card-body">
            <%= link_to list.name, list_path(list), class: "card-title h5" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
