<div class="container-fluid py-3 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <h3>My Lists</h3>
      </div>
      <div class="col-md-4 text-md-right">
        <%= link_to "Add List", new_list_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>

<div class="container pt-6">
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-4 mb-4">
        <%= link_to list_path(list), class: "card-link" do %>
          <div class="card h-100">
            <% if list.cover_image.attached? %>
              <%= image_tag list.cover_image, class: "card-img-top" %>
            <% else %>
              <%= image_tag "https://via.placeholder.com/400x300", class: "card-img-top" %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= list.name %></h5>
              <div class="card-buttons mt-2">
                <%= link_to "<i class='fas fa-edit'></i>".html_safe, edit_list_path(list), class: 'btn btn-outline-secondary' %>
                <%= link_to "<i class='fas fa-trash-alt'></i>".html_safe, list_path(list), method: :delete, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'btn btn-outline-secondary' %>
                <%= link_to "Bookmark", new_list_bookmark_path(list), class: 'btn btn-outline-secondary' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
