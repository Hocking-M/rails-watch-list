<section class="container">
  <div class="movie-content">
    <div class="row">
      <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
        <h2 class="movie-title"><%= @list.name %></h2>
        <div class="btn-group">
          <%= link_to "Bookmark", new_list_bookmark_path(@list), class: 'btn btn-flat' %>
          <%= link_to "<i class='fas fa-edit'></i>".html_safe, edit_list_path(@list) %>
          <%= link_to "<i class='fas fa-trash-alt'></i>".html_safe, edit_list_path(@list), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-delete' %>
        </div>
        <p class="movie-description">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi ac interdum tellus. Ut sed nibh ornare, ultrices lorem nec, tempus quam. Aliquam vitae nulla sit amet erat lacinia eleifend ut vitae lectus.</p>
      </div>
    </div>

    <hr>

    <div class="movies-grid">
      <div class="row">
        <% @list.movies.each do |movie| %>
          <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="movie-box">
              <img class="movie-poster" src="<%= movie.poster_url %>" alt="<%= movie.title %> poster">
              <p class="movie-title"><%= link_to movie.title, movie_path(movie) %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
