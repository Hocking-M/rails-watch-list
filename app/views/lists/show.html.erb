<section class="container">
  <div class="row">
    <div class="col-lg-12">
        <div class="card-header d-flex justify-content-between align-items-center" style="margin-top: 50px;">
          <%= image_tag @list.cover_image.attached? ? @list.cover_image : "https://via.placeholder.com/400x300", class: 'movie-poster', style: 'width: 400px; height: 300px;' %>
          <h2 class="movie-title mb-0"><%= @list.name %></h2>
          <div class="btn-group">
            <%= link_to "Bookmark", new_list_bookmark_path(@list), class: 'btn btn-outline-secondary' %>
            <%= link_to "<i class='fas fa-edit'></i>".html_safe, edit_list_path(@list), class: 'btn btn-outline-secondary' %>
            <%= link_to "<i class='fas fa-trash-alt'></i>".html_safe, list_path(@list), method: :delete, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'btn btn-outline-secondary' %>
          </div>
        </div>
        <div class="card-body">
          <p class="movie-description mb-0">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi ac interdum tellus. Ut sed nibh ornare, ultrices lorem nec, tempus quam. Aliquam vitae nulla sit amet erat lacinia eleifend ut vitae lectus.</p>
        </div>
    </div>
  </div>
  <div class="row movies-grid">
    <% @list.movies.each do |movie| %>
      <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
        <div class="movie-box">
          <%= link_to image_tag(movie.poster_url, alt: "#{movie.title} poster", class: "movie-poster"), movie_path(movie) %>
          <div class="movie-details">
            <p class="movie-title mb-0"><%= link_to movie.title, movie_path(movie) %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <h3>Bookmark Comments:</h3>
      <% @list.bookmarks.each do |bookmark| %>
        <p><%= bookmark.comment %></p>
      <% end %>
    </div>
  </div>
</section>
